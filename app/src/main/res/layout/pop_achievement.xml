<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<!--业绩筛选-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:text="选择时间范围"
        android:textColor="@color/hui"
        android:textSize="@dimen/textsize_6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@color/backgroundColor"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:text="开始时间"
            android:textColor="@color/hui" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:text="结束时间"
            android:textColor="@color/hui" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="揽存号"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_7" />

        <com.qdhc.ny.view.LastInputEditText
            android:id="@+id/edt_retain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical|end"
            android:hint="请输入"
            android:maxLength="12"
            android:text=""
            android:textSize="@dimen/textsize_7" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/backgroundColor"></View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="客户经理名称"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_7" />

        <com.qdhc.ny.view.LastInputEditText
            android:id="@+id/edt_client_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请输入"
            android:maxLength="12"
            android:text=""
            android:textSize="@dimen/textsize_7" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/backgroundColor"></View>

    <LinearLayout
        android:id="@+id/ll_bank"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_height="@dimen/title_height"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="中行名称"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_7"/>

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/li_fh"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/backgroundColor"></View>
    <LinearLayout
        android:id="@+id/ll_bank_"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_height="@dimen/title_height"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="支行名称"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_7"/>

        <TextView
            android:id="@+id/tv_bank_zhihang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/li_fh"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/backgroundColor"></View>



    <LinearLayout
        android:id="@+id/ll_subbranch"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_height="@dimen/title_height"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="管理员名称"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_7"/>

        <TextView
            android:id="@+id/tv_subbranch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/li_fh"
            android:gravity="right|center_vertical" />
    </LinearLayout>

    <View
        android:id="@+id/view_subbranch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/backgroundColor"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:layout_height="@dimen/title_height">
        <TextView
            android:id="@+id/tv_reset"
            android:gravity="center"
            android:background="@color/backgroundColor"
            android:layout_width="@dimen/dp_120"
            android:text="重置"
            android:textColor="#7e7e7e"
            android:textSize="@dimen/textsize_75"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_ok"
            android:gravity="center"
            android:background="#4594d6"
            android:layout_width="match_parent"
            android:text="确定"
            android:textSize="@dimen/textsize_75"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:id="@+id/view_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11000000"></View>
</LinearLayout>
