<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@drawable/bg_white_soild"
    android:padding="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:drawableRight="@drawable/ic_more"
            android:maxLines="1"
            android:text="新的通知"
            android:textSize="@dimen/textsize_8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="03月23日"
            android:textColor="@color/hui"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="跟进客户：" />

        <TextView

            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="客户手机：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="客户评价：" />
            <TextView
                android:id="@+id/tv_evaluate_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1_5"
                android:ellipsize="end"

                android:maxLines="1"
                android:text="暂无评价" />
            <com.qdhc.ny.view.CRatingBar
                android:id="@+id/rb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                app:clickable="false"
                app:starCount="5"
                app:starEmpty="@drawable/common_ic_star"
                app:starFill="@drawable/common_ic_selectstar"
                app:starImageSize="@dimen/dp_20"></com.qdhc.ny.view.CRatingBar>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="跟进地址：" />
        <TextView
            android:id="@+id/tv_sign_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />
    </LinearLayout>


</LinearLayout>
